	<div class="row">
		<div class="center col-sm-12">
				<img src="../public/assets/css/img/burger.jpg" alt="Burger Time App">
			<h1>BURGER TIME!</h1>
		</div>
	</div>

<main>
  <div class="container">
    <div class="row">
    	<h2>Hot and Ready Burgers Here!</h2>
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Don't See What You Like, Suggest a Burger!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">Suggestions Submitted Here</button>
    </form>
  </div>
</div>
